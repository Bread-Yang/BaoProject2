<?xml version="1.0" encoding="utf-8"?>
<com.mdground.yizhida.view.ResizeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" >

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/login_logo_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/about_icon" />

                <TextView
                    android:id="@+id/app_name_horizaontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="医直达"
                    android:textColor="#747474"
                    android:textSize="36sp"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/app_name_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="医直达"
                android:textColor="#747474"
                android:textSize="36sp"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/box8_nor"
                android:padding="3dp" >

                <com.mdground.yizhida.view.ClearEditText
                    android:id="@+id/login_name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/id_nor"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/common_input_box_clear"
                    android:hint="账号"
                    android:inputType="text"
                    android:longClickable="false"
                    android:paddingBottom="15dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp"
                    android:text="csys" />

                <ImageView
                    android:id="@+id/edit_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_below="@id/login_name"
                    android:background="@drawable/login_line" />

                <com.mdground.yizhida.view.ClearEditText
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@id/edit_line"
                    android:background="@null"
                    android:drawableLeft="@drawable/lock_nor"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/common_input_box_clear"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:longClickable="false"
                    android:paddingBottom="15dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/bg_button2_selector"
                android:gravity="center"
                android:onClick="login"
                android:padding="10dp"
                android:text="登陆"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:onClick="findPassword"
                android:text="找回密码"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</com.mdground.yizhida.view.ResizeLayout>