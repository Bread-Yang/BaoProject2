<?xml version="1.0" encoding="utf-8"?>
<com.mdground.yizhida.view.ResizeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root_search_patient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <include
        android:id="@+id/search_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/layout_search_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="@string/classification"
        android:textColor="@color/prescription_grey_color"
        android:textSize="15dp" />

    <RadioGroup
        android:id="@+id/rg_classification"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bg_doctor_item"
        android:orientation="horizontal"
        android:paddingBottom="14dp"
        android:paddingTop="14dp" >
    </RadioGroup>

    <ListView
        android:id="@+id/listview_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="@color/transparent" />

</com.mdground.yizhida.view.ResizeLinearLayout>