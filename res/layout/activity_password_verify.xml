<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_bg1" >

        <TextView
            android:id="@+id/change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/back" />
    </RelativeLayout>


        <TextView
            android:id="@+id/prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_below="@id/title_layout"
            android:text="您的密保手机号码是123****12,请点击&quot;获取验证码&quot;"
            android:textColor="@color/mynor_text"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/auth_code_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/prompt"
            android:background="@drawable/box3_nor" >

            <TextView
                android:id="@+id/get_auth_code"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="center"
                android:text="获取验证码"
                android:clickable="true"
                android:textColor="#2480f1"
                android:textSize="17sp" />
            
             <View
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_alignTop="@id/get_auth_code"
                android:layout_alignBottom="@id/get_auth_code"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/get_auth_code"
                android:background="#80808080" />

            <EditText
                android:id="@+id/input_auth_code"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/line"
                android:hint="请输入验证码"
                android:background="@null"
                android:ems="10" />
            
        </RelativeLayout>

        <Button
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:layout_below="@id/auth_code_layout"
            android:background="@drawable/bg_button1_selector"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
       

</RelativeLayout>