<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_person_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebecee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_bg1" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:text="完成"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/llt_section1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/box3_nor"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <RelativeLayout
                        android:id="@+id/headlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/selector_bg_doctor_item"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/head_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="头像"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/img_enter1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/in_button" />

                        <com.mdground.yizhida.view.CircleImageView
                            android:id="@+id/head_image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/img_enter1"
                            android:src="@drawable/head_man" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/namelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/name_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="姓名"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/name_notify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/name_title"
                            android:src="@drawable/error"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/name_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:lines="1"
                            android:singleLine="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/english"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/english_name_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="英文名"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/english_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:lines="1"
                            android:singleLine="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/sexlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/selector_bg_doctor_item"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/sex_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="性别"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/sex_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="男"
                            android:textColor="@color/mylist_item_text"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/birthlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/selector_bg_doctor_item"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/birthday_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="生日"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/birthday_notify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/birthday_title"
                            android:src="@drawable/error"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/birthday_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:focusableInTouchMode="false"
                            android:text="1999年1月1日"
                            android:textColor="@color/mylist_item_text"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/phonelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/phone_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="手机"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/phone_notify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/phone_title"
                            android:src="@drawable/error"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/phone_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="phone"
                            android:lines="1"
                            android:maxLength="11"
                            android:singleLine="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlt_emergency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/phone_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/emergency"
                            android:textSize="20sp" />

                        <com.kyleduo.switchbutton.SwitchButton
                            android:id="@+id/btn_switch_emergency"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignParentRight="true"
                            app:animationVelocity="8"
                            app:measureFactor="1.5"
                            app:offDrawable="@drawable/shape_ios_off"
                            app:onColor="#43d95d"
                            app:thumbDrawable="@drawable/ios_thumb"
                            app:thumb_marginBottom="-8dp"
                            app:thumb_marginLeft="-5dp"
                            app:thumb_marginRight="-5dp"
                            app:thumb_marginTop="-2.5dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llt_section2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-1dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/box3_nor"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <RelativeLayout
                        android:id="@+id/idcardlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/idcard_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="身份证"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/idcard_notify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/idcard_title"
                            android:src="@drawable/error"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/idcard_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="numberSigned"
                            android:lines="1"
                            android:singleLine="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/urgency_concact_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:layout_marginTop="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/urgency_concact_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="紧急联系人"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/urgency_concact_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/urgency_concact_name"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="text"
                            android:lines="1"
                            android:singleLine="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/concact_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/concact_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="联系人电话"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/concact_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/concact_name"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:inputType="numberSigned"
                            android:lines="1"
                            android:maxLength="11"
                            android:singleLine="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relationship_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/relationship_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="紧急联系人关系"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/relationship_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/relationship_name"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:lines="1"
                            android:singleLine="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/email_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/email_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="邮箱"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/email_notify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/email_name"
                            android:src="@drawable/error"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/email_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:lines="1"
                            android:singleLine="true" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llt_section3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/box3_nor"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/inner_code_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:layout_marginTop="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/inner_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="内部编号"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/inner_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:lines="1"
                            android:singleLine="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/sblayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/sb_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="社保号"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/sb_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:lines="1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/yblayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/yb_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="医保号"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/yb_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:lines="1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/marry_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/selector_bg_doctor_item"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/marry_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="婚姻状况"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/marry_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mz_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/mz_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="民族"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/mz_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:lines="1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/address_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/selector_bg_doctor_item"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/address_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="住址"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/address_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toLeftOf="@+id/ImageView03"
                            android:layout_toRightOf="@+id/address_title"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/ImageView03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/in_button" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llt_section4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-1dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/box3_nor"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/company_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:layout_marginTop="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/company_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="就职公司"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/company_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right|bottom"
                            android:lines="1"
                            android:singleLine="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/position_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:background="@drawable/box3_nor"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/position_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="职位"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/position_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="right"
                            android:lines="1"
                            android:singleLine="true" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/llt_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_button_green_rectangle"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="20sp" />

