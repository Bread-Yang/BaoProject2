<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/selector_bg_doctor_item"
    android:paddingLeft="15dp"
    android:paddingRight="3dp" >

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/v2delete_btn" />

    <TextView
        android:id="@+id/tv_fee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/iv_delete"
        android:text="其他费用"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_fee"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_yuan"
        android:background="@drawable/shape_prescription_edittext"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:singleLine="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_yuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:text="@string/yuan"
        android:textColor="@color/prescription_grey_color" />

</RelativeLayout>